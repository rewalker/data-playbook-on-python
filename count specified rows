import pandas as pd

# Load the dataset using the provided file path
file_path = r"#set your file path"
data = pd.read_csv(file_path)

# Count the cases where Classes = 'fire', Temperature > 30, and RH < 50
fire_temp_rh_count = data[(data['Classes'] == 'fire') & (data['Temperature'] > 30) & (data['RH'] < 70)].shape[0]

# Count the cases where Classes = 'not fire', Temperature > 30, and RH < 50
not_fire_temp_rh_count = data[(data['Classes'] == 'not fire') & (data['Temperature'] > 30) & (data['RH'] < 70)].shape[0]

# Count the total number of data lines
total_data_lines = data.shape[0]

probability = (fire_temp_rh_count/(fire_temp_rh_count+not_fire_temp_rh_count))*100 


print(f"The number of cases where Classes = 'fire', Temperature > 30, and RH < 50 is: {fire_temp_rh_count}")
print(f"The number of cases where Classes = 'not fire', Temperature > 30, and RH < 50 is: {not_fire_temp_rh_count}")
print(f"The total number of data lines is: {total_data_lines}")
print(f"The probability is: {probability}")



# In this example we see how to count lines where conditions are set. And how to make calculations with the calculated variables.
